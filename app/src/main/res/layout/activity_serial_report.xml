<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_width="match_parent">
                  <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/colorblue_dark"
                android:padding="2dp">


                <TextView
                    android:id="@+id/textView_voucherNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/voucher_date"

                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textView_transName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="@string/kindvoucher"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textView_date_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="@string/serialcode"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_debit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/item_number"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_cridit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/voucherNo"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/colorblue1"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </TableRow>
            <!--    </LinearLayout>-->

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"

                android:layout_margin="2dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SErecyclerView_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/back_border_edit"

                    android:orientation="vertical"
                    >

                </androidx.recyclerview.widget.RecyclerView>


            </RelativeLayout>
        </LinearLayout>
        <!--        </HorizontalScrollView>-->

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:visibility="visible"

            android:layout_alignBottom="@id/recyclerView_report"
            android:orientation="horizontal">
            <Button
                android:layout_height="35dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:textColor="@color/white"


                 />
            <Button

                android:layout_height="35dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:textColor="@color/white"

                 />
            <Button
                android:id="@+id/export"
                android:layout_height="35dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorblue1"
                android:background="@drawable/exportlbutton"
                android:text="export to excel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>