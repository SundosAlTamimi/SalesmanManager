<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer3"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingEnd="20dp"
    android:paddingHorizontal="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    android:paddingVertical="10dp"
    tools:context="com.dr7.salesmanmanager.DiscountFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/discTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_disc_type"
                android:textColor="@color/text_view_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/valueRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:checked="true"
                android:text="@string/app_disc_type1"
                android:textColor="@color/text_view_color"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/percentRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/app_disc_type2"
                android:textColor="@color/text_view_color"
                android:textSize="24sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_disc_value"
            android:textColor="@color/text_view_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/discEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="numberDecimal"
            android:textColor="@color/text_view_color"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/add_button"
            android:text="@string/app_ok"
            android:textColor="@color/layer5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@color/done_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold" />


    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

</LinearLayout>
