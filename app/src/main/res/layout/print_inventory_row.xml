<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:background="@color/layer3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_itemName_large"
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:visibility="visible"
            android:textColor="@color/add_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/item_name"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:layout_width="550dp">
        <TextView
            android:id="@+id/textView_itemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.7"

            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/add_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/item_name"
          />


        <TextView
            android:id="@+id/textView_itemNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.7"


            android:textColor="@color/add_button"
            android:textSize="18sp"

            android:text="@string/item_number"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textView_itemQuantity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2.3"

            android:textColor="@color/add_button"
            android:textSize="18sp"
            android:text="@string/unit_qty"
            android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            android:text="________________________________"
            android:textColor="@color/add_button"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>