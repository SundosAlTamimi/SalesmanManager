<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="400dp"
    android:background="@color/layer3"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:layoutDirection="locale"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_cust"
        android:layout_gravity="center"
        android:textColor="@color/text_view_color"
        android:textSize="25sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cust_name"
            android:textColor="@color/text_view_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/custEditText"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/add_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/remark"
            android:textColor="@color/text_view_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/remarkEditText"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/add_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/address"
            android:visibility="gone"
            android:textColor="@color/text_view_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:visibility="gone"

            android:inputType="text"
            android:textColor="@color/add_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="@string/pay_method"
            android:textColor="@color/text_view_color"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/paymentTermRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"

            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"

            >

            <RadioButton
                android:id="@+id/creditRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/app_credit"
                android:textColor="@color/text_view_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/cashRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:checked="true"
                android:text="@string/app_cash"
                android:textColor="@color/text_view_color"
                android:textSize="14sp" />
        </RadioGroup>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/doneButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/done_button"
            android:gravity="center"
            android:text="@string/app_done"
            android:textColor="@color/layer5"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>