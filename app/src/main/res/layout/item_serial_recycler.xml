<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/serialNo_linear"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">
        <TextView
            android:id="@+id/counter_ser"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@color/layer3"
            android:gravity="center"
            android:padding="3dp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:text="1"

            android:textColor="@color/text_view_color"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.2"
            android:id="@+id/serialValue_Model"
            android:visibility="gone"
            android:inputType="text"
            android:lines="1"

            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            android:textColor="@color/text_view_color"
            android:textSize="12sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/scanBarcode"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="3dp"
            android:src="@drawable/app_search"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/editBarcode"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="3dp"
            android:src="@drawable/ic_create_black_24dp"
            android:layout_weight="1"/>
<!--        android:background="@drawable/popup_inline_error"-->
        <EditText
            android:id="@+id/Serial_No"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="7"
            android:inputType="text"
            android:lines="1"
            android:background="@drawable/back_border_edit"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/errorSerial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white_alphe"


            android:layout_weight="1.5"
            android:inputType="text"
            android:enabled="false"
           android:visibility="visible"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/serialTextWatcher"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_margin="5dp"

            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:background="@drawable/back_border_edit"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/deletItem"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:padding="3dp"
            android:src="@drawable/ic_delete_forever_red_24dp"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>