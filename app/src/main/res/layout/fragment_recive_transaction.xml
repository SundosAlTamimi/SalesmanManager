<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReciveTransactionFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/layer2"

            >
            <TextView
                android:id="@+id/textView_voucher"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:background="@drawable/back_border_edit"
                android:layout_height="wrap_content"
                android:text="@string/voucherNo"
                android:layout_margin="10dp"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_voucherNo"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/layer2"

            >
            <TextView
                android:id="@+id/textView_tostore"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:background="@drawable/back_border_edit"
                android:layout_height="wrap_content"
                android:text="@string/toStore"
                android:layout_margin="10dp"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_store"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/layer4"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/app_item_no"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/app_desc"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/app_qty"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/row7"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="5dp"
        android:layout_gravity="fill"
        android:orientation="vertical">

        <ListView
            android:id="@+id/itemsListViewFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill" />

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
   android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:elevation="10dp"



        >
    <Button
        android:id="@+id/accept_btn"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:text="@string/accept"
        android:textStyle="bold"
        android:textColor="@color/layer3"
        android:background="@drawable/done_button"/>
    </LinearLayout>

</LinearLayout>