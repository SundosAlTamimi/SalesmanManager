<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/done_button"
        android:gravity="center"
        android:text="@string/app_cancel"
        android:textColor="@color/totals_color"
       android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="5dp">

        <!--        <ScrollView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="vertical">-->

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/tab"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TableRow
                    android:id="@+id/row_header"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="السلعة "
                        android:textColor="@color/add_button"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="العدد"
                        android:textColor="@color/add_button"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/wa1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="الوزن "
                        android:textColor="@color/add_button"
                        android:textSize="15sp"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text=" سعر الوحدة "
                        android:textStyle="bold"
                        android:textColor="@color/add_button"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="المجموع "
                        android:textStyle="bold"
                        android:textColor="@color/add_button"
                        android:textSize="15sp" />
<!--                    <TextView-->
<!--                        android:id="@+id/textView362"-->
<!--                        android:layout_width="100dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:visibility="invisible"-->

<!--                        android:gravity="center"-->
<!--                        android:textStyle="bold"-->
<!--                        android:text="العدد"-->
<!--                        android:textColor="@color/add_button"-->
<!--                        android:textSize="15sp" />-->
                </TableRow>
            </TableLayout>


            <TextView
                android:id="@+id/notelast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"
                android:text="استلمت البضاعة كاملة و بحالة جيدة وخالية من اية عيوب واتعهد بدفع قيمة هذه الفاتورة  . "
                android:textColor="@color/add_button"
               android:textSize="16sp" />

        </LinearLayout>
        <!--        </ScrollView>-->
    </LinearLayout>

</LinearLayout>
