                         <ImageView
                             android:id="@+id/imageView3"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="5dp"
                             android:scaleType="fitCenter"
                             app:srcCompat="@drawable/ret_inv"
                             />

                         <TextView
                             android:id="@+id/textView3"
