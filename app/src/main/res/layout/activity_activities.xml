<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dr7.salesmanmanager.Activities"
    android:orientation="horizontal"
    android:layoutDirection="locale"
    android:id="@+id/mainlyout"
    android:background="@color/layer3"
    >
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/mainLinearHolder"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">




    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:background="@color/layer3"
        android:orientation="horizontal">


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:layout_margin="3dp"
            android:id="@+id/linearMainActivities"
            android:visibility="visible"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/transactionCardViewTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:visibility="gone"
                android:layout_margin="4dp"
                android:background="@color/layer2"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@color/layer3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/transaction_ImageView1"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/trans" />

                    <TextView
                        android:id="@+id/transaction_textview2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"

                        android:gravity="center_horizontal"
                        android:text="@string/transaction"
                        android:textColor="@color/text_view_color"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/saleCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@color/layer2"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/linearInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@color/layer3"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/saleInvImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_playlist_add_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"

                        android:textSize="10sp"
                        android:text="@string/app_invoice"

                        android:textColor="@color/text_view_color"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

