        <android.support.v7.widget.CardView

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="4dp"
            android:background="@color/layer2"
            android:id="@+id/receiptCardView"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/layer3"
                android:gravity="center"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/paymentImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/payment" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="3dp"
                    android:gravity="center_horizontal"
                    android:text="@string/app_receipt"
                    android:textColor="@color/text_view_color"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="4dp"
            android:background="@color/layer2"
            card_view:cardCornerRadius="2dp"
            android:id="@+id/supplimentCardView"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@color/layer3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/stockRequestImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/supply" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:text="@string/app_request"
                    android:textColor="@color/text_view_color"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/transactionCardView"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:visibility="gone"
            android:layout_margin="4dp"
            android:background="@color/layer2"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@color/layer3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/transaction_ImageView"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/trans" />

                <TextView
                    android:id="@+id/transaction_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"

                    android:gravity="center_horizontal"
                    android:text="@string/transaction"
                    android:textColor="@color/text_view_color"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/layer3"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>
