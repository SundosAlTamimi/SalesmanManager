                     </LinearLayout>

                 </android.support.v7.widget.CardView>
         -->
            <androidx.cardview.widget.CardView

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@color/layer2"
                android:id="@+id/receiptCardView"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/linearPayment"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/layer3"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/paymentImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_money_on_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        app:autoSizeMinTextSize="10sp"

                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="1sp"


                        android:gravity="center"
                        android:text="@string/app_receipt"
                        android:textColor="@color/text_view_color"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@color/layer2"
                card_view:cardCornerRadius="2dp"
                android:id="@+id/supplimentCardView"
                >

                <LinearLayout
                    android:id="@+id/linearStock"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@color/layer3"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stockRequestImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_store_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"

                        android:gravity="center"
                        android:textSize="16sp"

                        android:text="@string/app_request"
                        android:textColor="@color/text_view_color"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/transactionCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:visibility="gone"
                android:layout_margin="4dp"
                android:background="@color/layer2"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@color/layer3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/transaction_ImageView"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/trans" />

                    <TextView
                        android:id="@+id/transaction_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"

                        android:gravity="center_horizontal"
                        android:text="@string/transaction"
                        android:textColor="@color/text_view_color"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/switchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_centerInParent="true"

            android:visibility="gone"
            android:textColor="@color/text_view_color"
            android:drawableLeft="@drawable/ic_keyboard_arrow_blue_black_24dp" />
    </RelativeLayout>

</LinearLayout>
