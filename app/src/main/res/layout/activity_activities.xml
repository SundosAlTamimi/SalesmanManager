<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dr7.salesmanmanager.Activities"
    android:orientation="horizontal"
    android:background="@color/layer1"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.CardView

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/saleCardView"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_margin="4dp"
            android:background="@color/layer2"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@color/layer3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/saleInvImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginTop="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/salesinv64" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/app_invoice"
                    android:textColor="@color/text_view_color"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

