<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer6"
    android:layoutDirection="locale"
    android:id="@+id/linearMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

           android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="@string/action_print_payment"

                android:textColor="@color/colorblue_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/row2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"

                    android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/from_date"
                    android:textColor="@color/text_view_color"
                    android:textSize="@dimen/content" />

                <EditText
                    android:id="@+id/from_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:focusable="false"
                    android:inputType="date"
                    android:textColor="@color/add_button"
                    android:textSize="@dimen/content"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/to_date"
                    android:textColor="@color/text_view_color"
                    android:textSize="@dimen/content" />

                <EditText
                    android:id="@+id/to_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:focusable="false"

                    android:inputType="date"
                    android:textColor="@color/add_button"
                    android:textSize="@dimen/content"
                    />




            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/pic_ptint_voucher"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:visibility="gone"/>
    </LinearLayout>

    <Button
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:background="@drawable/done_button"
        android:text="@string/preview"
        android:textColor="@color/white"
        android:textSize="@dimen/content_large"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:background="@drawable/back_border_edit"
        >
        <HorizontalScrollView
        android:id="@+id/HorizontalScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/TableTransactionsReport"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

       >

            <TableRow
                android:layout_margin="5dp"
                android:background="@color/colorblue_dark"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:layout_marginRight="1dp"
                    android:textSize="12sp"


                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/voucher_number"

                    />
