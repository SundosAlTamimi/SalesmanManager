<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendTransactionFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="5dp"
            android:background="@color/layer2"
            android:layout_weight="1"

            >
            <ImageButton
                android:id="@+id/addItemImgButton"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/add_items"

                />
        <ImageButton
            android:id="@+id/newImgBtn"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/new_inv" />

        <ImageButton
            android:id="@+id/saveInvoiceData"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/save_btn" />


        </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/layer2"

        >
        <TextView
            android:id="@+id/textView_tostore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:background="@drawable/back_border_edit"
            android:layout_height="wrap_content"
            android:text="To Store:"
            android:layout_margin="10dp"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
        />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/layer4"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left"
            android:text="@string/app_item_no"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="left"
            android:text="@string/app_desc"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="@string/app_qty"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/row7"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="fill"
        android:orientation="vertical">

        <ListView
            android:id="@+id/itemsListViewFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp"
        android:paddingBottom="1dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="@string/total_qty"
            android:textColor="@color/text_view_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="@string/app_zero"
            android:textColor="@color/second_color"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>