<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="170dp"
    android:background="@color/layer1"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_view_color"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:text="@string/enter_qty" />

        <EditText
            android:id="@+id/editText1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@color/layer5"
            android:ems="10"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:imeOptions="actionDone"
            android:background="@color/done_button"
            android:textColor="@color/layer5"
            android:text="@string/app_done"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@color/cancel_button"
            android:textColor="@color/layer5"
            android:text="@string/app_cancel"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>