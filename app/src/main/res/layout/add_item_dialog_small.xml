<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="500dp"
    android:minWidth="500dp"
    android:minHeight="550dp"
    android:id="@+id/mainLinearAddItem"
    android:background="@color/layer6"
    android:orientation="vertical"
    android:layoutDirection="locale"
    android:padding="7dp">

    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:text="000"
        android:textColor="@color/colorblue_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"

        android:textColor="@color/colorblue_dark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/text_view_color"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
           
            android:text="@string/app_unit"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/unit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="9dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginStart="5dp" />


        <TextView
            android:id="@+id/textQty"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:text="@string/weight"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/unitQty"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/textview_wieght"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        
            android:text="@string/unit_qty"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/unitWeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"

            android:inputType="numberDecimal"
            />

        <CheckBox
            android:id="@+id/use_weight"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="@string/use_weight"
            android:checked="true"
            android:textColor="@color/text_view_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/layer3"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/pricee"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="@string/app_price"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

                        android:text="0"
            android:inputType="numberDecimal"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
<LinearLayout
    android:id="@+id/linear_bonus"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:layout_weight="2"
    android:orientation="horizontal"
    android:visibility="visible">
        <TextView
            android:id="@+id/bonuss"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/app_bonus"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bonus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textSize="16sp" />
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discount_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">



        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="@string/app_disc"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/discTypeRadioGroup"
            android:layout_marginLeft="7dp"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/app_disc_type1"
                android:layout_gravity="center_vertical"
                android:id="@+id/discValueRadioButton"
                android:textColor="@color/text_view_color"
                android:textSize="16sp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/app_disc_type2"

                android:id="@+id/discPercRadioButton"
                android:layout_marginLeft="7dp"
                android:textColor="@color/text_view_color"
                android:textSize="16sp"
                />

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/layer3"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/discribtionItem_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="@string/remark"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/item_note"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/serialNo_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="@string/SerialNo"
            android:textColor="@color/text_view_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Serial_No"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textSize="16sp" />
        <ImageView
            android:id="@+id/serialScan"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:src="@drawable/search_btn"
            android:layout_weight="1"/>

    </LinearLayout>
    <Button
        android:id="@+id/addToListwredgt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:visibility="invisible"
        android:background="@color/add_button"
        android:text="@string/app_add_to_list"
        android:textColor="@color/layer5"
        android:textStyle="bold" />
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/addToList"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/done_button"
            android:text="@string/app_add_to_list"
            android:textColor="@color/layer5"
            android:textStyle="bold" />
        <Button
            android:id="@+id/cancel0000"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"

            android:layout_margin="5dp"
            android:background="@color/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold" />
        <Button
            android:id="@+id/cancelAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:background="@drawable/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>