<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo"
    android:gravity="center"
    android:background="@color/white">
    <androidx.cardview.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/voucherReportCardView"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/voucherReportLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/voucherReportImageView"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/invoice"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/colorblue1"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:lineSpacingExtra = "15dp"
                android:text="@string/vouchers_report"

                android:textColor="@color/colorblue1"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemsReportsCardView2"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/itemsReportsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:id="@+id/itemsReportsImageView2"-->
            <!--android:layout_width="110dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:background="@drawable/items_icon" />-->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/itemsReportsImageView2"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/items2"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/colorblue1"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:textSize="20dp"
                android:lineSpacingExtra = "15dp"
                android:gravity="center_horizontal"
                android:text="@string/items_report"
                android:textColor="@color/colorblue1"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>