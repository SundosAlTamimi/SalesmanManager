<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="horizontal"
    app:ignore="NamespaceTypo"
    android:gravity="center"
    android:background="@color/layer1">


    <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/voucherReportCardView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:background="@color/layer2"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:id="@+id/voucherReportLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="@color/layer3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/voucherReportImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/salesinv64" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:lineSpacingExtra = "15dp"
                android:text="@string/vouchers_report"
                android:textColor="@color/text_view_color"
                 />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemsReportsCardView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:background="@color/layer2"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:id="@+id/itemsReportsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="@color/layer3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemsReportsImageView2"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/items_icon" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:lineSpacingExtra = "15dp"
                android:gravity="center_horizontal"
                android:text="@string/items_report"
                android:textColor="@color/text_view_color"
                 />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>