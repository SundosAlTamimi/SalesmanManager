<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layer3"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="3dp"
        android:gravity="center"
        android:text="Printer Setting "
        android:textColor="@color/add_button"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/add_button" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Print name shape "
        android:textSize="16sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_normalnam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Normal" />

        <RadioButton
            android:id="@+id/radioButton_large_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Large Name" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RadioButton
            android:id="@+id/LK30"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checked="true"
            android:text="SEWOOLK-P30"
            android:textColor="@color/add_button"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/LK31"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SEWOO LK-P31"
            android:textColor="@color/add_button"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/LK32"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SEWOO LK-P32 "
            android:textColor="@color/add_button"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/QS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="QS-PRINTER"
            android:textColor="@color/add_button"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/dotMatrix"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Dot-Matrix Printer (Tally MDP 480+)"
            android:textColor="@color/add_button"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/MTP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="PRINTER (MTP-3)"
            android:textColor="@color/add_button"
            android:textSize="16sp" />
    </RadioGroup>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/done_button"
        android:text="@string/save"
        android:textColor="@color/layer3"
        android:textSize="16sp" />
</LinearLayout>