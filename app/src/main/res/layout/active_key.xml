<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:padding="20dp"
    android:background="@color/layer2"
    android:layout_height="400dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_activate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active key"
            android:textSize="30dp"
            android:textColor="@color/done_button"
          android:gravity="center"/>

        <EditText
            android:id="@+id/editText_active_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter active key"
            android:text="" />
<LinearLayout
    android:layout_height="150dp"
    android:layout_width="match_parent"
    android:orientation="horizontal">
        <Button
            android:id="@+id/button_activeKey"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:background="@color/done_button"
            android:text="@string/app_done" />
        <Button
            android:id="@+id/button_cancel_key"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:background="@color/cardview_dark_background"
            android:text="@string/app_cancel" />
</LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>