<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:padding="20dp"
    android:background="@color/layer7"
    android:layout_height="400dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_activate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active key"
            android:textSize="20sp"
            android:textColor="@color/done_button"
          android:gravity="center"/>

        <EditText
            android:id="@+id/editText_active_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/back_border_edit"
            android:textColor="@color/text_view_color"
            android:layout_gravity="center"
            android:gravity="center_vertical"

            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter active key"
            android:text="" />
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
        <Button
            android:id="@+id/button_activeKey"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="10dp"

            android:layout_marginTop="1dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/done_button"
            android:text="@string/app_done" />

    <Button
        android:id="@+id/button_cancel_key"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:background="@drawable/cancel_button"
        android:text="@string/app_cancel"
        android:textSize="16sp" />
</LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>