<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dr7.salesmanmanager.Activities"
    android:orientation="horizontal"
    android:layoutDirection="locale"
    android:id="@+id/mainlyout"
    android:background="@color/white"
    >
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/mainLinearHolder"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/fragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:background="@color/white"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearMainActivities"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/white"
                android:layout_weight="11"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.cardview.widget.CardView

                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/transactionCardViewTest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="0"
                    android:background="@color/layer2"
                    android:visibility="gone"
                    card_view:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/layer3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/transaction_ImageView1"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/trans" />

                        <TextView
                            android:id="@+id/transaction_textview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"

                            android:gravity="center_horizontal"
                            android:text="@string/transaction"
                            android:textColor="@color/text_view_color"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/saleCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/layer3"
                    card_view:cardCornerRadius="5dp">

                    <LinearLayout
                        android:id="@+id/linearInvoice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@color/layer3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/saleInvImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_playlist_add_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="@string/app_invoice"
                            android:textColor="@color/text_view_color"

                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--     <android.support.v7.widget.CardView

                         xmlns:android="http://schemas.android.com/apk/res/android"
                         xmlns:card_view="http://schemas.android.com/apk/res-auto"
                         android:layout_width="@dimen/card_view_width"
                         android:layout_height="@dimen/card_view_height"
                         android:layout_margin="4dp"
                         android:background="@color/layer2"
                         card_view:cardCornerRadius="4dp">

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:background="@color/layer3"
                             android:orientation="vertical">

                             <ImageView
                                 android:id="@+id/imageView3"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_marginTop="5dp"
                                 android:scaleType="fitCenter"
                                 app:srcCompat="@drawable/ret_inv"
                                 />

                             <TextView
                                 android:id="@+id/textView3"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center_horizontal"
                                 android:layout_marginBottom="5dp"
                                 android:layout_marginLeft="5dp"
                                 android:gravity="center_horizontal"
                                 android:text="@string/app_ret_inv"
                                 android:textColor="#ffffff"
                                 android:textStyle="bold" />
                         </LinearLayout>

                     </android.support.v7.widget.CardView>
             -->
                <androidx.cardview.widget.CardView

                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/receiptCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/layer2"
                    card_view:cardCornerRadius="5dp">

                    <LinearLayout
                        android:id="@+id/linearPayment"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/layer3"
                        android:gravity="center"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/paymentImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_money_on_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="@string/app_receipt"
                            android:textColor="@color/text_view_color"
                            android:textStyle="bold"
                            android:textSize="16sp"
                          />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView

                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/supplimentCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/layer2"
                    card_view:cardCornerRadius="5dp">

                    <LinearLayout
                        android:id="@+id/linearStock"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@color/layer3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/stockRequestImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_store_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"

                            android:gravity="center"
                            android:text="@string/app_request"

                            android:textColor="@color/text_view_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/transactionCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1.3"
                    android:background="@color/layer2"
                    android:visibility="gone"
                    card_view:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/layer3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/transaction_ImageView"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/trans" />

                        <TextView
                            android:id="@+id/transaction_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"

                            android:gravity="center_horizontal"
                            android:text="@string/transaction"
                            android:textColor="@color/text_view_color"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/switchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_centerInParent="true"

            android:visibility="gone"
            android:textColor="@color/text_view_color"
            android:drawableLeft="@drawable/ic_keyboard_arrow_blue_black_24dp" />
    </RelativeLayout>

</LinearLayout>
